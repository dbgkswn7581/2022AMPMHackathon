<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_base"
    tools:context=".sign.Welcome">

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginBottom="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/imgDropfood"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:src="@drawable/splashscreen"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/textWelcome"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_btn"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonpatter"
        android:text="sign up"
        android:textColor="#384264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgDropfood"
        android:layout_marginTop="100dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonpatter"
        android:text="login"
        android:textColor="#384264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/signup_btn"
        android:layout_marginTop="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>